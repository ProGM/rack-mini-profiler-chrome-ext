{
  "manifest_version": 2,

  "name": "Rack Mini Profiler Extension",
  "description": "A chrome extension to make easier to use Rack Mini Profiler gem on Chrome.",
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "devtools_page": "devtools.html",
  "browser_action": {
    "default_icon": "icon-disabled.png",
    "name": "Click to open mini-profiler data."
  },
  "permissions": [
    "webRequest",
    "activeTab",
    "tabs",
    "http://*/",
    "https://*/"
  ]
}
